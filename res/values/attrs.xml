    <integer name="export_maximum_text_characters_per_line">@integer/icon_maximum_text_characters_per_line</integer>

    <dimen name="export_maximum_text_size">@dimen/icon_maximum_text_size</dimen>
    <dimen name="export_icon_text_padding">@dimen/icon_text_padding</dimen>
    <dimen name="export_icon_text_corner_radius">@dimen/icon_text_corner_radius</dimen>
    <dimen name="export_maximum_text_height_with_image">@dimen/icon_maximum_text_height_with_image</dimen>

