    <string name="extra_internal_id">internal_id</string>
    <string name="extra_parent_id">parent_id</string>
    <string name="extra_edit_mode">edit_mode</string>
    <string name="extra_media_visibility">media_visibility</string>
    <string name="extra_selected_items">selected_items</string>
    <string name="extra_finish_activity">finish_activity</string> <!-- FLAG_ACTIVITY_CLEAR_TOP is so *slow* -->
    <string name="extra_finish_parent_activities">finish_parent_activities</string>
    <string name="extra_playback_position">playback_position</string>
    <string name="extra_playback_offset">playback_offset</string>
