<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TODO: remember to update values-v11 at the same time -->


    <!-- icons -->
    <dimen name="homestead_icon_total_size">100dp</dimen> <!-- including all person icons -->
    <dimen name="homestead_icon_size">70dp</dimen> <!-- of the actual homestead icon -->

    <item name="homestead_icon_person_maximum_diameter_factor" format="float" type="attr">0.4</item> <!-- of the overlaid person icons -->
    <item name="homestead_icon_person_minimum_diameter_factor" format="float" type="attr">0.1</item> <!-- as factor of total_size -->

    <dimen name="person_icon_container_width">204dp</dimen> <!-- always square -->
    <dimen name="person_icon_width">196dp</dimen> <!-- usually person_icon_container_width - 8 -->
    <dimen name="person_icon_height">@dimen/person_icon_width</dimen> <!-- deprecated; now same as width -->
    <dimen name="person_icon_progress_padding">82dp</dimen> <!-- container_width - 40 / 2 -->
    <dimen name="media_icon_container_width">102dp</dimen> <!-- always square -->
    <dimen name="media_icon_width">94dp</dimen> <!-- usually media_icon_container_width - 8 -->
    <dimen name="media_icon_height">@dimen/media_icon_width</dimen> <!-- deprecated; now same as width -->
    <dimen name="media_icon_progress_padding">31dp</dimen> <!-- container_width - 40 / 2 -->
    <item name="media_icon_person_size_factor" format="float" type="attr">0.3</item> <!-- of the overlaid person icons as a factor of icon_width -->


    <!-- icons in layouts -->
    <dimen name="media_owner_icon_width">75dp</dimen>
    <dimen name="media_owner_icon_height">@dimen/media_owner_icon_width</dimen>

    <!-- icon shared properties -->
    <dimen name="icon_grid_spacing">20dp</dimen>
    <dimen name="icon_maximum_text_size">30sp</dimen>
    <dimen name="icon_border_width">2dp</dimen>
    <dimen name="icon_border_right_width">3dp</dimen> <!-- must be icon_border_width + 1 to fix 1px gap on some devices -->
    <dimen name="icon_text_padding">6dp</dimen>
    <dimen name="icon_text_corner_radius">4dp</dimen>

    <item name="icon_main_svg_scale_factor" format="float" type="attr">0.9</item>
    <item name="icon_overlay_svg_scale_factor" format="float" type="attr">0.22</item>
    <item name="icon_overlay_spacing_factor" format="float" type="attr">0.02</item>

    <dimen name="icon_maximum_text_height_with_image">60dp</dimen>

    <integer name="icon_maximum_text_characters_per_line">26</integer>

    <!-- import related -->
    <integer name="frame_narrative_sequence_increment">10</integer>

    <!-- playback and export settings TODO: combine both versions (mediaphone and mediatablet) -->
    <dimen name="playback_text_size">32sp</dimen>
    <dimen name="playback_text_padding">@dimen/icon_text_padding</dimen>
    <dimen name="playback_text_corner_radius">@dimen/icon_text_corner_radius</dimen>
    <dimen name="playback_maximum_text_height_with_image">@dimen/icon_maximum_text_height_with_image</dimen>

