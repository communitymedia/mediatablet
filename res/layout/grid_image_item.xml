<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/grid_image_view_image"
        android:layout_width="@dimen/media_icon_width"
        android:layout_height="@dimen/media_icon_width"
        android:background="@android:color/transparent"
        android:contentDescription="@string/icon_image_description"
        android:scaleType="center" />

    <ProgressBar
        android:id="@+id/grid_image_view_progress"
        android:layout_width="@dimen/media_icon_width"
        android:layout_height="@dimen/media_icon_width"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:padding="@dimen/media_icon_progress_padding" />

    <ImageView
        android:id="@+id/grid_image_view_overlay"
        android:layout_width="@dimen/media_icon_width"
        android:layout_height="@dimen/media_icon_width"
        android:contentDescription="@null"
        android:src="@drawable/grid_item_filter" />

</RelativeLayout>
